{
    "compilerOptions": {
      "target": "ES2018",
      "module": "Node16",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node16",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    }
  }
  